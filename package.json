{
  "name": "pr-comment",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action to comment on PR",
  "main": "lib/main.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com//fxtr/ga-pr-comment.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "miyajan",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^2.1.1",
    "@octokit/webhooks": "^7.1.0"
  },
  "devDependencies": {
    "@fixter/eslint-config-common": "^1.0.0",
    "@octokit/rest": "^17.1.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@zeit/ncc": "^0.21.1",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "js-yaml": "^3.13.1",
    "nock": "^12.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
